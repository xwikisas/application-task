#macro(maybeSet $document $propName $propValue)
  #if($propValue)
    $document.set($propName, $propValue)
  #end
#end

#if("$!request.outputSyntax" == 'plain')
  #set($discard = $response.setContentType('application/json'))
#end

#set($taskDocument = $request.taskDocument)
#if (!$xwiki.exists($taskDocument))
  $jsontool.serialize({'success':false, 'reason':$services.localization.render('taskmanager.gantt.taskEdit.error.notExists'), 'page': "$taskDocument"})
#else
  #set($taskDocument = $xwiki.getDocument($taskDocument))
  #set($taskClass = $taskDocument.getObject('TaskManager.TaskManagerClass'))

  #if (!$taskClass)
    $jsontool.serialize({'success':false, 'reason':$services.localization.render('taskmanager.gantt.taskEdit.error.notExistsClass')})
  #else
    #if (!$services.security.authorization.hasAccess('edit', $taskDocument))
      $jsontool.serialize({'success':false, 'reason':$services.localization.render('taskmanager.gantt.taskEdit.error.permissions')})
    #else
      #set($discard = $taskDocument.use('TaskManager.TaskManagerClass'))
      #if($request.endDate)#set($end = $datetool.toDate($numbertool.toNumber($request.endDate).longValue()))#end
      #if($request.startDate)#set($start = $datetool.toDate($numbertool.toNumber($request.startDate).longValue()))#end

      #maybeSet($taskDocument 'progress' $request.progress)
      #if ($request.progress == '100')
        $taskDocument.set('status', 'Done')
      #end
      #maybeSet($taskDocument 'startDate' $start)
      #maybeSet($taskDocument 'duedate' $end)
      #set($discard = $taskDocument.save($services.localization.render('taskmanager.gantt.taskEdit.comment'), false))
      $jsontool.serialize({'success':true})
    #end
  #end
#end
{{/velocity}}</content>
