    <property>
      <code>require(['jquery', 'diff-dom'], function ($, diffDOM) {
  let htmlDecode = function(content) {
    let doc = new DOMParser().parseFromString(content, "text/html");
    return doc.documentElement.textContent;
  };
  let handleCKEWysiwyg = function (content, editor) {
    CKEDITOR.plugins.xwikiSource.convertHTML(editor, {
        fromHTML: false,
        toHTML: true,
        text: content
    }).done(function (data) {
      let editableContent = editor.editable().$;
      let dd = new diffDOM.DiffDOM();
        let newContent;
        if (editor.elementMode === CKEDITOR.ELEMENT_MODE_INLINE) {
          let tmpServerBody = $('&lt;body&gt;&lt;/body&gt;').append(data);
          let tmpCurrentBody = $('&lt;body&gt;&lt;/body&gt;').append($(editableContent).clone()[0].children);
          let diff = dd.diff(diffDOM.nodeToObj(tmpCurrentBody[0]), diffDOM.nodeToObj(tmpServerBody[0]))
          dd.apply(editableContent, diff);
        } else {
          let serverDOM = $(new DOMParser().parseFromString(data, 'text/html'));
          // Compare the content of the body and apply the diff. We want to preserve the head.
          let diffAgainst = serverDOM.find('body')[0];
          let diff = dd.diff(diffDOM.nodeToObj(editableContent), diffDOM.nodeToObj(diffAgainst))
          dd.apply(editableContent, diff);
        }
        editor.execCommand("xwiki-refresh");
    });
  }
  let handleTextarea = function (content, editor) {
    let editorData = editor.val();
    let cursorStart = editor.prop('selectionStart');
    let cursorEnd = editor.prop('selectionEnd');
    if (content === editorData) {
      return;
    }
    editor.val(content);
    editor.prop('selectionStart', cursorStart);
    editor.prop('selectionEnd', cursorEnd);
  };
  let handleWikiEditorWithHighlight = function (content, editor) {
    let editorData = editor.getValue();
    if (content === editorData) {
      return;
    }
    let cursorStart = editor.getCursor(true);
    let cursorEnd = editor.getCursor(false);
    editor.setValue(content);
    editor.setSelection(cursorStart, cursorEnd);
  }
  // After the document is saved, retrieve it's content and check if there were any modifications on the server.
  $(document).on('xwiki:document:saved', function () {
    let docURL = XWiki.currentDocument.getRestURL();
  $.getJSON(docURL)
      .done(function (data) {
        let content = data.content;
        if (window.CKEDITOR) {
          let currentCKEditor = CKEDITOR.instances.content || CKEDITOR.instances.xwikicontent;
          if (currentCKEditor) {
            if (currentCKEditor.mode ===   'source') {
              let userTextarea = $(currentCKEditor.ui.contentsElement.$).find('textarea');
              handleTextarea(content, userTextarea);
            } else {
              handleCKEWysiwyg(content, currentCKEditor);
            }
            return;
          }
        }
        let wikiModeEditor = $('textarea#content');
        if (wikiModeEditor.length) {
          const codeMirrorEditor = wikiModeEditor.nextAll('.CodeMirror');
          if (codeMirrorEditor.length) {
            handleWikiEditorWithHighlight(content, codeMirrorEditor.prop('CodeMirror'))
          } else {
            handleTextarea(content, wikiModeEditor);
          }
        }
      })
      .fail(function () {
        console.log('Failed to retrieve the content of the document.');
      });
  });
});</code>
